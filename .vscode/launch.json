    "version": "0.2.0",
    "configurations": [
        
         //  "request"：有两个选项，对应这两种调试模式
        {
            "type": "pwa-node",
            "request": "launch", // 本地调试，在编辑器里启动
            "name": "Launch Program",
            "program": "${workspaceFolder}\\hello-node.js"
        },
        {
            "type": "pwa-node",
            "request": "attach", // 远程调试，附加到进程，在编辑器外通过node --debug命令启动
            "name": "根据端口来查找进程",
            "address": "localhost", // IP地址或域名
            "port": 9229, // 远程端口
            "localRoot": null, // 本地代码根目录
            "remoteRoot": null,// 远程代码的相对目录
        }
    ]
}